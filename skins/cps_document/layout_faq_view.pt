<metal:block use-macro="here/layout_lib/macros/div_view" />
<tal:block tal:define="proxy nocall:options/proxy;
                       items proxy/getFolderContents;">
<p tal:repeat="item items">
  <img tal:replace="structure python:
    here.getImgTag(here.portal_types[item.portal_type].getIcon(),
                   base_url=here.portal_url.getPortalPath()+'/')">
  <a tal:define="doc item/getContent"
     tal:attributes="href string:${request/URL}#q${repeat/item/number};
                     title doc/description|nothing;"
     tal:content="item/Title"/>
</p>
<hr style="margin:2em">
<tal:block repeat="item items">
  <div tal:attributes="id string:q${repeat/item/number}">
    <div style="padding-top:1em;"
      tal:define="doc item/getContent">
      <img tal:replace="structure python:
        here.getImgTag(here.portal_types[item.portal_type].getIcon(),
                       base_url=here.portal_url.getPortalPath()+'/')">
      <strong tal:content="doc/title" /><br />
      <em tal:content="doc/description" />
      <p tal:content="doc/content" />
    </div>
  </div>
  <p style="text-align:center">
    <a href="javascript:history.back()" i18n:translate="button_back">back</a>
  </p>
</tal:block>

</tal:block>
