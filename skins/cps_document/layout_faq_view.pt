<metal:block use-macro="here/layout_lib/macros/div_view">
  <!-- Render other layouts -->
</metal:block>
<tal:block tal:define="proxy nocall:options/proxy;
  items proxy/getFolderContents;">

  <p tal:repeat="item items">
    <img tal:replace="structure python:
      here.getImgTag(here.portal_types[item.portal_type].getIcon(),
      base_url=here.portal_url.getPortalPath() + '/')">
      <a tal:define="doc item/getContent"
        tal:attributes="href string:${request/URL}#a${repeat/item/number};
        name string:q${repeat/item/number};
        title doc/description|nothing;"
        tal:content="item/Title"/>
  </p>
  <hr style="margin:2em"/>
  <tal:block repeat="item items">
    <div style="padding-top:1em;"
      tal:attributes="id string:a${repeat/item/number}"
      tal:define="doc item/getContent">
      <h2>
        <img tal:replace="structure python:here.getImgTag(here.portal_types[item.portal_type].getIcon(),
          base_url=here.portal_url.getPortalPath()+'/')" />
        <span tal:replace="doc/title">The Title</span>
      </h2>
      <p tal:content="doc/description">
        The Description
      </p>
      <p tal:content="doc/content">
        The Content
      </p>
    </div>
    <p style="text-align:center">
      <a tal:attributes="href string:${request/URL}#q${repeat/item/number}"
        i18n:translate="button_back">back</a>
    </p>
  </tal:block>

</tal:block>
